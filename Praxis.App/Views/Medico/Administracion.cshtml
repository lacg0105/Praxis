@{
    ViewBag.Title = "Administración";
}

<div class="wrapper wrapper-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Herramientas</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="sk-spinner sk-spinner-wave">
                            <div class="sk-rect1"></div>
                            <div class="sk-rect2"></div>
                            <div class="sk-rect3"></div>
                            <div class="sk-rect4"></div>
                            <div class="sk-rect5"></div>

                        </div>
                        <div class="row">
                            <div class="col-lg-offset-9 botonesReportes">
                                <span class="cssWritingAccess">
                                    <a class="btn btn-success btn-outline" id="btnReporteExcel">
                                        <i class="fa fa-file-excel-o"></i> Exportar Excel
                                    </a>
                                </span>
                                <span class="cssWritingAccess">
                                    <a class="btn btn-success btn-outline" id="btnReportePdf">
                                        <i class="fa fa-file-pdf-o"></i> Exportar PDF
                                    </a>
                                </span>
                            </div>
                            <div class="botonesReportesPequeño">
                                <span class="cssWritingAccess">
                                    <button class="btn btn-success btn-outline dim" type="button"><i class="fa fa-file-excel-o"></i></button>
                                </span>
                                <span class="cssWritingAccess">
                                    <button class="btn btn-success btn-outline dim" type="button"><i class="fa fa-file-pdf-o"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="sk-spinner sk-spinner-wave">
                            <div class="sk-rect1"></div>
                            <div class="sk-rect2"></div>
                            <div class="sk-rect3"></div>
                            <div class="sk-rect4"></div>
                            <div class="sk-rect5"></div>
                        </div>
                        <div class="row">
                            <div class="col-lg-offset-10 botonesGrid">
                                <span class="cssWritingAccess">
                                    <a class="btn btn-success btn-outline" id="btnBorrar">
                                        <i class="fa fa-eraser"></i> Borrar
                                    </a>
                                </span>
                                <span class="cssWritingAccess">
                                    <a class="btn btn-success btn-outline" id="btnExcel">
                                        <i class="fa fa-file-excel-o"></i> Excel
                                    </a>
                                </span>
                            </div>
                            <div class="botonesGridPequeños">
                                <span class="cssWritingAccess">
                                    <button class="btn btn-success btn-outline dim" type="button" id="btnBorrarResponsive"><i class="fa fa-eraser"></i></button>
                                </span>
                                <span class="cssWritingAccess">
                                    <button class="btn btn-success btn-outline dim" type="button" id="btnExcelResponsive"><i class="fa fa-file-excel-o"></i></button>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div id="grdHistoriaClinica"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hdnUrlHistoriaClinica" value="@Url.Action("HistoriaClinica", "Medico")" />

@section Styles {
    @Styles.Render("~/Modulos/HistoriaClinica")
    @Styles.Render("~/plugins/switcheryStyles")
}

@section Scripts {
    <script src="~/Scripts/Medico/Administracion.js"></script>
    @Scripts.Render("~/plugins/switchery")
}
