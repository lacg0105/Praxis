@{
    ViewBag.Title = "Usuarios";
}

<div class="wrapper wrapper-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Herramientas</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <p>
                            <span class="cssWritingAccess">
                                <a class="btn btn-success btn-outline" href="@Url.Action("InformacionUsuarios", "Catalogos")">
                                    <i class="fa fa-user-circle"></i> Nuevo usuario
                                </a>

                                <a class="btn btn-success btn-outline" id="btnExpExcelgrd">
                                    <i class="fa fa-file-excel-o"></i> Reporte excel
                                </a>

                                <a class="btn btn-success btn-outline" id="btnExpPdfgrd">
                                    <i class="fa fa-file-pdf-o"></i> Reporte PDF
                                </a>

                                <a class="btn btn-success btn-outline" id="btnLimpiarFiltros">
                                    <i class="fa fa-eraser"></i> Limpiar filtros
                                </a>
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="grdUsers"></div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hdnIdSubSubModule" value="@ViewBag.IdSubSubModule" />
<input type="hidden" id="hdnUrlEditUser" value="@Url.Action("InformacionUsuarios", "Catalogos")" />
<input type="hidden" id="hdnUrlObtenerPerfilUsuario" value="@Url.Action("ObtenerPerfilUsuario","Catalogos")" />

<style type="text/css">
    .customer-photo {
        display: inline-block;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-size: 32px 35px;
        background-position: center center;
        vertical-align: middle;
        line-height: 32px;
        box-shadow: inset 0 0 1px #999, inset 0 0 10px rgba(0,0,0,.2);
        margin-left: 5px;
    }

    .customer-name {
        display: inline-block;
        vertical-align: middle;
        line-height: 32px;
        padding-left: 3px;
    }

    /*.k-grid {
        width: 500px;
    }*/
</style>
@section Scripts {
    <script type="x/kendo-template" id="page-template">
        <div class="page-template">
            <div class="header">
                <div style="float: right">Pagina #: pageNum # de #: totalPages #</div>
                GAF Riesgos
            </div>
            <div class="watermark">PRAXIS</div>
            <div class="footer">
                Pagina #: pageNum # de #: totalPages #
            </div>
        </div>
    </script>
    <script src="~/Scripts/Catalogos/Usuarios.js"></script>
}
